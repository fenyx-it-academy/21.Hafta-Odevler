<Manager>:
    Screen_1:
        name:"screen1"
    Screen_2:
        name:"screen2"
    feedback:
        name:"feedback"

<Screen_1>:
    BoxLayout:
        orientation:"vertical"
        spacing:15
        padding:70

        Label:
            color:0,0.8,1,1
            text:"ADAM ASMACA \n   IYI SANSLAR"


        Button:
            background_color:0,0,1,0.7
            color:0,0.8,1,1
            text:"Yeni Oyun"
            size_hint:1,0.1
            on_press:root.manager.current="screen2"

        Button:
            color:0,0.8,1,1
            background_color:0,0,1,0.6
            text:"Cikis"
            size_hint:1,0.1
            on_press:quit()

