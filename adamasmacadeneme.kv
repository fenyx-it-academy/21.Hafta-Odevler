                Button:
                    text: "Yeni Oyun"
                    font_size: 15
                    background_color: 2,0,0,1
                    color: 1,1,1,1
                    on_press: yazialani.text = ""
                    on_press: oyunid.kelime()
        TextInput:
            text:"Aciklama: Oyuna baslamak icin Yeni Oyun butonuna basmalisiniz. Boylelikle kelimeniz belirlenir. Eyer kelimeniz bosluk karakterine sahipse, ekrana gelen sayi bosluk karakterinide icerir. Bosluklar kelimeniz icinde _ ile gosterilir."
            size_hint: 1,.14
            background_color: 1,.8,1,10
            font_size: 14
            foreground_color: 0,0,0,1
